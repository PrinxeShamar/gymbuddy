generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id
  fullName String
  gyms Gym[]
  messages Message[]
}

model Gym {
  id String @id
  name String?
  address String?
  users User[]
  messages Message[]
}

model Message {
  id Int @id @default(autoincrement())
  gym Gym @relation(fields: [gymId], references: [id])
  gymId String
  user User @relation(fields: [userId], references: [id])
  userId String
  content String
}